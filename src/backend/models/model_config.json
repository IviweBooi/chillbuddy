{
  "model_settings": {
    "primary_model": {
      "name": "microsoft/GODEL-v1_1-base-seq2seq",
      "type": "seq2seq",
      "version": "1.1",
      "local_path": "./models/GODEL-v1_1-base-seq2seq",
      "use_local": false,
      "description": "Microsoft GODEL model for conversational AI"
    },
    "fallback_model": {
      "name": "microsoft/DialoGPT-medium",
      "type": "causal_lm",
      "use_if_primary_fails": true,
      "description": "Fallback conversational model"
    }
  },
  "generation_parameters": {
    "max_new_tokens": 80,
    "min_length": 10,
    "temperature": 0.8,
    "top_p": 0.95,
    "top_k": 40,
    "repetition_penalty": 1.2,
    "length_penalty": 1.0,
    "num_beams": 1,
    "early_stopping": true,
    "do_sample": true,
    "pad_token_id": 50256,
    "eos_token_id": 50256
  },
  "safety_settings": {
    "enable_content_filter": true,
    "enable_crisis_detection": true,
    "enable_inappropriate_content_filter": true,
    "max_response_length": 200,
    "min_response_length": 5,
    "blocked_topics": [
      "self_harm_methods",
      "suicide_methods",
      "illegal_activities",
      "medical_diagnosis",
      "medication_advice"
    ],
    "crisis_keywords": [
      "suicide",
      "kill myself",
      "end my life",
      "hurt myself",
      "self harm",
      "overdose",
      "jump off",
      "hang myself"
    ]
  },
  "performance_settings": {
    "use_gpu": true,
    "gpu_device": 0,
    "batch_size": 1,
    "max_memory_usage_gb": 4,
    "enable_caching": true,
    "cache_size": 100,
    "response_timeout_seconds": 30
  },
  "conversation_settings": {
    "context_window": 5,
    "include_user_name": false,
    "include_timestamp": false,
    "conversation_starter": "Hello! I'm ChillBuddy, your mental health support companion. How are you feeling today?",
    "session_timeout_minutes": 60,
    "max_conversation_length": 50
  },
  "mental_health_specific": {
    "empathy_boost": true,
    "active_listening_prompts": true,
    "coping_strategy_suggestions": true,
    "mood_tracking_integration": true,
    "crisis_intervention_priority": "high",
    "professional_referral_threshold": "medium",
    "response_tone": "supportive_and_empathetic"
  },
  "localization": {
    "primary_language": "en",
    "supported_languages": ["en", "af", "zu", "xh"],
    "south_african_context": true,
    "local_resources": true,
    "cultural_sensitivity": true
  },
  "logging_and_monitoring": {
    "log_all_interactions": true,
    "log_model_performance": true,
    "log_safety_triggers": true,
    "anonymize_logs": true,
    "retention_days": 30
  },
  "experimental_features": {
    "emotion_detection": false,
    "personality_adaptation": false,
    "advanced_context_understanding": false,
    "multi_turn_planning": false
  },
  "model_updates": {
    "auto_update": false,
    "update_frequency": "monthly",
    "backup_before_update": true,
    "rollback_on_failure": true
  },
  "development_settings": {
    "debug_mode": false,
    "verbose_logging": false,
    "test_mode": false,
    "mock_responses": false,
    "response_delay_ms": 0
  }
}